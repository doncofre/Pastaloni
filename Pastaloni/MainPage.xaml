<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pastaloni.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Opción 1" Clicked="Opcion1_Clicked" />
        <ToolbarItem Text="Opción 2" Clicked="Opcion2_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        
        <VerticalStackLayout
            
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            
            
            >
            


            <ListView x:Name="lvUsers"
                      SeparatorColor="Gray"
                      SeparatorVisibility="Default"
                      ItemSelected="lvUsers_ItemSelected"
                      ItemTapped="lvUsers_ItemTapped"
                      
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                                  Detail="{Binding Surname}">

                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
